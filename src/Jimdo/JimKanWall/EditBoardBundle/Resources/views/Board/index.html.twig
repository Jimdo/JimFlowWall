{% extends 'JimdoJimKanWallEditBoardBundle::layout.html.twig' %}
{% block body %}

<h1>Board list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('manage_board_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('manage_board_print', { 'id': entity.id }) }}">print qr codes</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_board_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('manage_board_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
